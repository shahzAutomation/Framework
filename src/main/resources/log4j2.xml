<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="baseDir">Logs</Property>
	</Properties>
	<Appenders>
		<RollingFile name="RollingFile" fileName="${baseDir}/app.log"
			filePattern="${baseDir}/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log">
			<PatternLayout>
				<Pattern>%d{dd:MM:yyyy - HH:mm:ss.SSS} [%t] %-5level %logger{36} - %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="20MB" />
			</Policies>
		</RollingFile>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %m%n" />
		</Console>
	</Appenders>	
	<Loggers>	
		<Logger name="com.TestProjectFramework.TestScript" level="info" additivity="true">
			<AppenderRef ref="Console" />
		</Logger>
	<Logger name="com.TestProjectFramework.TestScriptom.hrm.testscript" level="info">
			<AppenderRef ref="RollingFile" />
	</Logger>
		
		<Root level="info">
			<AppenderRef ref="RollingFile" />
		</Root>
		
	</Loggers>
</Configuration>